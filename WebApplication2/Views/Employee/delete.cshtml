@model WebApplication2.Models.EmployeeVM;

@{
    ViewBag.Title = "delete";
}
<h2 class="text-center font-bold">Are you sure  you want to delete following employee?</h2>
<br /><br />
<form asp-controller="Employee" asp-action="delete" method="post" class="form-group">
    <label>Name</label>
    <input type="text" asp-for="Name" disabled class="form-control" />
    <br />
    <label>Salary</label>
    <input type="text" asp-for="Salary" disabled class="form-control" />
    <br />
    <label>Address</label>
    <input type="text" asp-for="Aderess" disabled class="form-control" />
    <br />
    <label>Email</label>
    <input type="text" asp-for="Email" disabled class="form-control" />
    <br />

    <label>IsActive</label>
    <input type="text" asp-for="IsActive" disabled class="form-control" />
    <br />
    <label>HireDate</label>
    <input type="date" disabled asp-for="HireDate" class="form-control" />
    <br />
    <label>DepartmentName</label>
    <select asp-for="Departmentid" disabled asp-items="@(SelectList)ViewBag.DepartmentList" class="form-control">
        <option value="">@Model.DepartmentName</option>

    </select>

    <br />
    <label>Notes</label>
    <textarea type="text" disabled asp-for="Notes" rows="4" class="form-control"></textarea>
    <br />
    <div class="row text-center">
        <input  type="submit" value="Delete" class="btn btn-danger " />
        <input asp-controller="Employee" asp-action="Index" type="submit" value="Return" class="btn btn-success " />

    </div>
</form>
<link href="~/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
